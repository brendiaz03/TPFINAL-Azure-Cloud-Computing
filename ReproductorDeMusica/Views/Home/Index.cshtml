@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interfaz de Música</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header class="navbar">
        <div class="logo">🎵 MyMusic</div>
        <div class="search-bar">
            <input type="text" placeholder="¿Qué quieres reproducir?">
            <button class="search-btn">🔍</button>
        </div>
        <div class="auth-buttons">
            <button class="register-btn">Registrarse</button>
            <button class="login-btn">Iniciar sesión</button>
        </div>
    </header>

    <div class="main-container">
        <aside class="sidebar">
            <h2>Tu bibliotecas</h2>
            <button>Crear una playlist</button>
        </aside>

        <section class="content">
            <h3>Artistas populares</h3>
            <div class="image-row carousel">
                <img src="/images/Luis Fonsi.jpg" alt="Artista 1">
                <img src="/images/Shakira.jpg" alt="Artista 2">
                <img src="/images/Tini.jpg" alt="Artista 3">
            </div>

            <h3>Álbumes populares</h3>
            <div class="image-row carousel">
                <img src="/images/tema Fonsi.jpg" alt="Álbum 1">
                <img src="/images/tema Shakira.jpg" alt="Álbum 2">
                <img src="/images/tema Tini.jpg" alt="Álbum 3">
            </div>
        </section>
    </div>

    <script src="/js/site.js"></script>
</body>
<footer class="footer">
    <div class="footer-top">
        <div class="footer-section">
            <h4>Compañía</h4>
            <ul>
                <li><a href="#">Acerca de</a></li>
                <li><a href="#">Empleo</a></li>
                <li><a href="#">Historia</a></li>
            </ul>
        </div>
        <div class="footer-section">
            <h4>Comunidades</h4>
            <ul>
                <li><a href="#">Para artistas</a></li>
                <li><a href="#">Desarrolladores</a></li>
                <li><a href="#">Publicidad</a></li>

            </ul>
        </div>
        <div class="footer-section">
            <h4>Enlaces útiles</h4>
            <ul>
                <li><a href="#">Asistencia</a></li>
                <li><a href="#">App gratis</a></li>
                <li><a href="#">Privacidad</a></li>
            </ul>
        </div>
        <div class="footer-social">
            <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/facebook-new.png" alt="Facebook"></a>
            <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/instagram-new.png" alt="Instagram"></a>
            <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/twitter.png" alt="Twitter"></a>
        </div>
    </div>

    <div class="footer-bottom">
    </div>
</footer>
</html>
