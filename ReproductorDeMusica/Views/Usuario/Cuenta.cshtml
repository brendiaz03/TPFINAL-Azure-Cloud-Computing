@model ReproductorDeMusica.Web.Models.CuentaViewModel
<link rel="stylesheet" href="~/css/Usuario/Cuenta.css">

<div class="container">
    <main>

        <div class="user-info">
            <div class="profile-image-container">
                @if (string.IsNullOrEmpty(ViewBag.ImagenUsuario))
                {
                    <span class="img-usuario-cuenta">@ViewBag.NombreUsuario.Substring(0, 1) @ViewBag.NombreUsuario.Substring(1, 1)</span>
                }
                else
                {
                    <img src="@ViewBag.ImagenUsuario" alt="Usuario" class="img-usuario-cuenta">
                }
            </div>

            <div class="user-details">
                <h1 id="userName"> @Model.Nombre @Model.Apellido </h1>
                <p id="userEmail"> @Model.Email </p>
            </div>

        </div>

        <div class="plan-card">
            <div class="plan-header">
                <p class="plan-title">Tu plan</p>
                <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Logo%20PNG-Y8NYO3BhnHdIDnWm2xw1XNnT1tG4CJ.png" alt="Ripple Logo" class="plan-ripple-logo">
            </div>
            <h2 class="plan-name"> @Model.TipoPlan</h2>
            @if (ViewBag.MostrarBotonPagar)
            {
                <div class="boton-pagar">
                    <p>�Hazte miembro premium para disfrutar al m�ximo!</p>
                    <a href="/Plan"><button type="button" class="btn-principal">Ver Plan Premium</button></a>
                </div>
            }
            @if (ViewBag.MostrarPremium)
            {
                    <div class="barra-suscripcion-container">
                <p>D�as restantes de suscripci�n: @ViewBag.DiasRestantes</p>
                <div class="barra-suscripcion">
                    <div class="barra-suscripcion-restante" style="width: @(100 * ViewBag.DiasRestantes / ViewBag.DiasTotales)%;"></div>
                </div>
            </div>
            }

        </div>

    </main>
</div>


<script src="~/js/Usuario/Cuenta.js"> </script>
