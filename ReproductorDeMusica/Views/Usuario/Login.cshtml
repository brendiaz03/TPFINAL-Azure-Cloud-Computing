@model ReproductorDeMusica.Web.Models.LoginViewModel
<link rel="stylesheet" href="~/css/Login.css">

<div class="contenedor-pagina">
    <h1 class="titulo_login">Iniciar Sesión</h1>

    <form asp-action="Login" method="post" class="fondo-form">
        <section class="formulario">

        <div class="form-group mb-3">
            <label asp-for="NombreUsuario" class="form-label fw-bold">Nombre de Usuario</label>
            <input asp-for="NombreUsuario" class="form-control" placeholder="Ingrese su nombre de usuario" />
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Contrasenia" class="form-label fw-bold">Contraseña</label>
            <input asp-for="Contrasenia" type="password" class="form-control" placeholder="Ingrese su contraseña" />
            <span asp-validation-for="Contrasenia" class="text-danger"></span>
        </div>

        <div class="text-danger">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <section class="botones">
                <a href="/Home/Index"><button id="boton_cancelar_ingresar" type="button" class="btn-secundario">Cancelar</button></a>
                <button type="submit" id="boton_Login" class="btn-principal">Iniciar Sesión</button>
        </section>
        </section>
    </form>
</div>
