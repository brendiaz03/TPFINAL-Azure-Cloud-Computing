<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReproductorDeMusica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/ca80211b53.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/ReproductorDeMusica.styles.css" asp-append-version="true" />
</head>
<body>

   
    
    @if (ViewBag.EsFormulario == null || ViewBag.EsFormulario == false)
    {
        <div class="topbar">
        @if (ViewBag.EstaLoggeado != null && ViewBag.EstaLoggeado == true)
        {
                <div class="navbar">
                    <form id="searchForm" action="/Cancion/Buscar" method="GET" class="search-bar">
                        <div class="input-container">
                            <input type="text" name="titulo" placeholder="¿Qué quieres reproducir?" required>
                            <i class="fas fa-search search-icon"></i>
                        </div>
                    </form>
                    <div id="resultadosBusqueda" style="display: none; border: 1px solid #ccc; max-height: 200px; overflow-y: auto;"></div>
               </div>
                <div class="contenedor-botones">
                        <span class="mensajeBienvenida">Bienvenido, @ViewBag.NombreUsuario</span>

                   
                        <div class="dropdown">
                            <button class="btn btn-secondary" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user"></i>
                        </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" href="/Usuario/Cuenta">Cuenta</a></li>
                                <li><a class="dropdown-item" href="/Usuario/Logout">Cerrar Sesión</a></li>
                            </ul>
                        </div>
              </div>
        }else{
            <div class="contenedor-botones">
                <a href="/Usuario/RegistrarUsuario"><button class="btn-secundario">Registrarse</button></a>
                <a href="/Usuario/Login"><button class="btn-principal">Iniciar Sesion</button></a>
            </div>

        }
        </div>
    }
    <div class="columnas_main">
    <div class="sidebar">
        <div class="logo">
            <a href="/Home/Index" class="logo-link">
                <img src="/images/ripple_logo.png" alt="Logo" class="logo-img">
            </a>
        </div>

        @if (ViewBag.EsFormulario == null || ViewBag.EsFormulario == false && (ViewBag.EstaLoggeado != null && ViewBag.EstaLoggeado == true))
        {

            <div class="navigation">
                <ul>
                    <li id="navigation-li-home">
                        <a href="#">
                            <span class="fa fa-home"></span>
                            <span>Home</span>
                        </a>
                    </li>

                    <li id="navigation-li-my-library">
                        <a href="#">
                            <span class="fa fas fa-book"></span>
                            <span>Your Library</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="navigation">
                <ul>
                    <li id="navigation-li-create-playlist">
                        <button id="createPlaylistButton" type="button" class="no-button" data-bs-toggle="modal" data-bs-target="#addSongModal">
                            <span class="fa fas fa-plus-square"></span>
                            <span>Create Song</span>
                        </button>
                    </li>

                    <li id="navigation-li-liked-songs">
                        <a href="#">
                            <span class="fa fas fa-heart"></span>
                            <span>Liked Songs</span>
                        </a>
                    </li>
                </ul>

            </div>
        }
    </div>

    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>
     @if (ViewBag.EsFormulario == null || ViewBag.EsFormulario==false){
    <div id="reproductorContainer">
        <partial name="_ReproductorPartial" />
    </div>
     }
    <footer class="footer">
        <div class="footer-top">
            <div class="footer-section">
                <h4>Compañía</h4>
                <ul>
                    <li><a href="#">Acerca de</a></li>
                    <li><a href="#">Empleo</a></li>
                    <li><a href="#">Historia</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Comunidades</h4>
                <ul>
                    <li><a href="#">Para artistas</a></li>
                    <li><a href="#">Desarrolladores</a></li>
                    <li><a href="#">Publicidad</a></li>

                </ul>
            </div>
            <div class="footer-section">
                <h4>Enlaces útiles</h4>
                <ul>
                    <li><a href="#">Asistencia</a></li>
                    <li><a href="#">App gratis</a></li>
                    <li><a href="#">Privacidad</a></li>
                </ul>
            </div>
            <div class="footer-social">
                <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/facebook-new.png" alt="Facebook"></a>
                <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/instagram-new.png" alt="Instagram"></a>
                <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/twitter.png" alt="Twitter"></a>
            </div>
        </div>

        <div class="footer-bottom">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
        <script src="~/js/Layout/Layout.js"> </script>
</body>
</html>
