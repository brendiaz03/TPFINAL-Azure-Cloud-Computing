<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReproductorDeMusica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReproductorDeMusica.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar">
        <div class="logo">🎵 MyMusic</div>
        <div class="search-bar">
            <form id="searchForm" action="/Cancion/Buscar" method="GET">
                <input type="text" name="titulo" placeholder="¿Qué quieres reproducir?" required>
                <button type="submit" class="search-btn">🔍</button>
            </form>
                    <div id="resultadosBusqueda" style="display: none; border: 1px solid #ccc; max-height: 200px; overflow-y: auto;"></div>
        </div>
        <div class="auth-buttons">
            <button class="register-btn">Registrarse</button>
            <button class="login-btn">Iniciar sesión</button>
        </div>
    </header>

    <aside class="sidebar">
        <h2>Tu bibliotecas</h2>
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <form action="/ListaReproduccion/Index" method="GET">
                            <input type="hidden" name="usuarioId" value=4 />
                            <button type="submit" class="btn btn-primary">Ver Mis Playlists</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </aside>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="reproductorContainer">
        <partial name="_ReproductorPartial" />
    </div>

    <script>
        $(document).ready(function () {
            $('#search-input').on('input', function () {
                const query = $(this).val();

                if (query.length > 2) { // Iniciar búsqueda cuando hay más de 2 caracteres
                    $.get('/Cancion/Buscar', { query: query }, function (data) {
                        $('#resultadosBusqueda').html(data).show(); // Muestra los resultados
                    });
                } else {
                    $('#resultadosBusqueda').hide(); // Oculta los resultados si la consulta es muy corta
                }
            });

            // Cuando se hace clic en el botón de reproducir
            $(document).on('click', '.btn-reproducir', function (e) {
                e.preventDefault();

                // Obtener la URL del archivo de audio
                const audioUrl = $(this).data('ruta-audio');

                // Asignar la URL al reproductor de audio
                $('#audioSource').attr('src', audioUrl);

                // Recargar el reproductor para que tome el nuevo archivo
                const player = $('#audioPlayer')[0];
                player.load();

                // Reproducir el audio automáticamente
                player.play();
            });
        });
    </script>

    <footer class="footer">
        <div class="footer-top">
            <div class="footer-section">
                <h4>Compañía</h4>
                <ul>
                    <li><a href="#">Acerca de</a></li>
                    <li><a href="#">Empleo</a></li>
                    <li><a href="#">Historia</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Comunidades</h4>
                <ul>
                    <li><a href="#">Para artistas</a></li>
                    <li><a href="#">Desarrolladores</a></li>
                    <li><a href="#">Publicidad</a></li>

                </ul>
            </div>
            <div class="footer-section">
                <h4>Enlaces útiles</h4>
                <ul>
                    <li><a href="#">Asistencia</a></li>
                    <li><a href="#">App gratis</a></li>
                    <li><a href="#">Privacidad</a></li>
                </ul>
            </div>
            <div class="footer-social">
                <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/facebook-new.png" alt="Facebook"></a>
                <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/instagram-new.png" alt="Instagram"></a>
                <a href="#"><img src="https://img.icons8.com/material-rounded/24/ffffff/twitter.png" alt="Twitter"></a>
            </div>
        </div>

        <div class="footer-bottom">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
        <script src="~/js/Layout/Layout.js"> </script>
</body>
</html>
